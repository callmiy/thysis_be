{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start front end",
      "type": "shell",
      "command": "yarn start",
      "options": {
        "env": {
          "PORT": "3016",
          "REACT_APP_API_URL": "http://localhost:4016/__api"
        }
      },
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "start front end js only",
      "type": "shell",
      "command": "launch_with_cmder.bat \"npm start\"",
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "start front end js only + watch css",
      "type": "shell",
      "command": "launch_with_cmder.bat \"npm start\" && launch_with_cmder.bat \"npm run watch-css\"",
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "watch css",
      "type": "shell",
      "command": "launch_with_cmder.bat \"npm run watch-css\"",
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "build front end dev",
      "type": "shell",
      "command": "yarn deploy",
      "options": {
        "env": {
          "REACT_APP_API_URL": "http://localhost:4016/__api"
        }
      },
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "build front end prod",
      "type": "shell",
      "command": "yarn deploy",
      "options": {
        "env": {
          "REACT_APP_API_URL": "https://thysis.herokuapp.com/__api"
        }
      },
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "deploy to heroku client + server",
      "type": "shell",
      "command": "yarn deploy && cd .. && git add . && git cm -m \"Production build\" && git co master && git merge dev && git subtree push --prefix=server heroku master && heroku run \"POOL_SIZE=2 mix ecto.migrate\" && git co dev",
      "options": {
        "env": {
          "REACT_APP_API_URL": "https://thysis.herokuapp.com/__api"
        }
      },
      "problemMatcher": []
    },

    {
      "label": "deploy to heroku server only",
      "type": "shell",
      "command": "git co master && git merge dev && git subtree push --prefix=server heroku master && heroku run \"POOL_SIZE=2 mix ecto.migrate\" && git co dev",
      "options": {
        "cwd": ".."
      },
      "problemMatcher": []
    },

    {
      "label": "Apollo code gen",
      "type": "shell",
      "command": "apollo-codegen introspect-schema http://localhost:4016/__api --output src/graphql/schema.json && apollo-codegen generate src/graphql/*.ts --schema src/graphql/schema.json --target typescript --output src/graphql/gen.types.ts",
      "problemMatcher": []
    }
  ]
}
